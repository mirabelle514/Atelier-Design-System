{
  "name": "atelier-app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "workspaces": [
    "tokens"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "tokens:build": "npm --prefix tokens run build",
    "tokens:sync-public": "npm run tokens:build && node scripts/sync-tokens-to-public.mjs",
    "chromatic": "chromatic --project-token=$CHROMATIC_PROJECT_TOKEN",
    "chromatic:test": "chromatic --project-token=$CHROMATIC_PROJECT_TOKEN --exit-zero-on-changes",
    "chromatic:publish": "chromatic --project-token=$CHROMATIC_PROJECT_TOKEN --auto-accept-changes"
  },
  "dependencies": {
    "@atelier/tokens": "workspace:*",
    "@hookform/resolvers": "^5.2.2",
