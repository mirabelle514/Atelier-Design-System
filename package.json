    "@vitejs/plugin-react": "^4.1.0",
    "autoprefixer": "^10.4.20",
    "chromatic": "^13.1.2",
    "eslint": "^9.15.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "globals": "^15.12.0",
    "postcss": "^8.4.49",
    "storybook": "^7.5.0",
